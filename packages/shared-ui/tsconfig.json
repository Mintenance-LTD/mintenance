{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
