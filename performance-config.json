{
  "performance": {
    "budgets": {
      "bundleSize": {
        "warning": "2MB",
        "error": "3MB"
      },
      "loadTime": {
        "warning": "3s",
        "error": "5s"
      },
      "memoryUsage": {
        "warning": "100MB",
        "error": "150MB"
      }
    },
    "monitoring": {
      "enableMetrics": true,
      "sampleRate": 0.1,
      "trackingEvents": [
        "screen_load",
        "api_request",
        "user_interaction",
        "error_boundary"
      ]
    },
    "optimization": {
      "enableCodeSplitting": true,
      "enableImageOptimization": true,
      "enableCaching": true,
      "offlineStrategy": "stale-while-revalidate"
    }
  },
  "testing": {
    "coverage": {
      "minimum": 80,
      "target": 90
    },
    "performance": {
      "maxRenderTime": "100ms",
      "maxApiResponseTime": "2s"
    }
  }
}
