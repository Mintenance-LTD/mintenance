# NPM Configuration for Mintenance Monorepo

# Workspace configuration
legacy-peer-deps=true
auto-install-peers=true

# Strict mode for ci
prefer-offline=false
audit=true

# Workspace hoisting
hoist=true
shamefully-hoist=true

# Engine strict mode (respect engines field)
engine-strict=true

# GitHub Packages configuration
@mintenance:registry=https://npm.pkg.github.com
//npm.pkg.github.com/:_authToken=${NODE_AUTH_TOKEN}
